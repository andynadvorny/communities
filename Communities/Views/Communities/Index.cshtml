@model IEnumerable<Community>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">Our Communities</h1>

<div class="row">
    @foreach (var item in Model) {
        <div class="col-lg-4 mb-4">
            <div class="card border-primary h-100">
                <div class="card-body d-flex flex-column align-items-start">
                    <img src="@Url.Content(item.Cover)" class="rounded w-100 h-50 mb-3" style="object-fit:cover" />
	                <h4 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <span class="badge badge-pill badge-primary mb-3">@Html.DisplayFor(modelItem => item.Category.Name)</span>
	                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
	                <div class="w-100 text-center mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
         </div>
    }
</div>

<div class="text-right">
    <a 
        class="btn btn-primary align-bottom btn-circle rounded-circle" 
        asp-action="Create"
        style="width: 50px; height: 50px; text-align: center; padding: 10px 13px; font-size: 35px; line-height: 19px;"
    >
        +
    </a>
</div>

