@model Communities.Models.ViewModels.CommunityFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Community</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Community.Id" />
            <div class="form-group">
                <label asp-for="Community.Name" class="control-label"></label>
                <input asp-for="Community.Name" class="form-control" />
                <span asp-validation-for="Community.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.Cover" class="control-label"></label>
                <input asp-for="Community.Cover" class="form-control" />
                <span asp-validation-for="Community.Cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.CategoryId" class="control-label"></label>
                <select 
                    asp-for="Community.CategoryId" 
                    asp-items="@(new SelectList(Model.CategoryList, "Id", "Name"))"
                    class="form-control"
                ></select>
                <span asp-validation-for="Community.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.Description" class="control-label"></label>
                <textarea asp-for="Community.Description" class="form-control" style="height: 100px"></textarea>
                <span asp-validation-for="Community.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Community.OwnerId" class="control-label"></label>
                <select 
                    asp-for="Community.OwnerId" 
                    asp-items="@(new SelectList(Model.UserList, "Id", "Name"))"
                    class="form-control"
                ></select>
                <span asp-validation-for="Community.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
